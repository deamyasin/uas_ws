<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBG"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBG"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="@dimen/space_20">

        <LinearLayout
            android:id="@+id/ll_item_detail_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_button_red"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <customViews.TextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/add_to_cart"
                android:textAlignment="viewStart"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16" />

            <ProgressBar
                android:id="@+id/pb_item_detail_add_to_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/space_10"
                android:indeterminateTint="@color/colorWhite" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_10"
                android:src="@mipmap/ic_plus_white"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_item_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/space_50" />

        <customViews.TextViewRegular
            android:id="@+id/tv_item_detail_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="start"
            android:textAlignment="viewStart" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>