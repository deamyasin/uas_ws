<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.checkout.CheckoutNoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBG"
        android:orientation="vertical"
        android:padding="@dimen/space_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_view_white2"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <customViews.TextViewBold
                android:id="@+id/tv_checkout_note_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pickup_at"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_16" />

            <customViews.TextViewRegular
                android:id="@+id/tv_checkout_note_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/xml_view_white2"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <customViews.TextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/total_items"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_16" />

                <customViews.TextViewBold
                    android:id="@+id/tv_checkout_note_total_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="0"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <customViews.TextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/cart_amount"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_16" />

                <customViews.TextViewBold
                    android:id="@+id/tv_checkout_note_total_price_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_5"
                    android:gravity="start"
                    android:text="0"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:contentDescription="@string/have_you_promo_code"
                android:src="@drawable/ic_promo" />

            <customViews.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5"
                android:text="@string/have_you_promo_code"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <customViews.TextViewRegular
            android:id="@+id/et_checkout_note_promo_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/xml_view_gray2"
            android:gravity="start"
            android:hint="@string/enter_promo_code_here"
            android:padding="@dimen/space_10"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:id="@+id/ll_checkout_note_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <customViews.TextViewRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/promo_discount_applied"
                android:textAlignment="viewStart"
                android:textColor="@color/colorGreenLight" />

            <customViews.TextViewBold
                android:id="@+id/tv_checkout_note_promo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:gravity="start"
                android:text="@string/currency"
                android:textAlignment="viewStart"
                android:textColor="@color/colorGreenDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:contentDescription="@string/write_order_note"
                android:src="@drawable/ic_note" />

            <customViews.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5"
                android:text="@string/write_order_note"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <customViews.EditTextRegular
            android:id="@+id/et_checkout_note"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/xml_view_gray2"
            android:ems="10"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:padding="@dimen/space_10"
            android:textAlignment="viewStart" />

        <customViews.ButtonBold
            android:id="@+id/btn_checkout_note_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/xml_button_red"
            android:gravity="center"
            android:text="@string/check_out"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_18" />

    </LinearLayout>

</ScrollView>