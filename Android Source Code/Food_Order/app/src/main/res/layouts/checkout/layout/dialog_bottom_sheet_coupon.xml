<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_coupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_30"
    android:paddingLeft="@dimen/space_30"
    android:paddingEnd="@dimen/space_30"
    android:paddingRight="@dimen/space_30"
    android:paddingBottom="@dimen/space_20">

    <View
        android:layout_width="@dimen/space_40"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_20"
        android:background="@drawable/xml_button_red" />

    <customViews.TextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/coupon_code"
        android:textAlignment="viewStart"
        android:textColor="@color/colorGreenLight"
        android:textSize="@dimen/text_16" />

    <customViews.EditTextRegular
        android:id="@+id/et_coupon_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/type_your_coupon_code_here"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextHint"
        android:textColorHint="@color/colorTextHint" />

    <customViews.ButtonBold
        android:id="@+id/btn_coupon_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/xml_button_red"
        android:gravity="center"
        android:text="@string/verify_and_apply"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_18" />

</LinearLayout>