<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_30"
    android:paddingTop="@dimen/space_50"
    android:paddingEnd="@dimen/space_30"
    android:paddingBottom="@dimen/space_10"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/colorGray"
        app:civ_circle_background_color="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <customViews.TextViewBold
        android:id="@+id/tv_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="@dimen/text_18"
        android:autoSizeMinTextSize="@dimen/text_10"
        android:autoSizeTextType="uniform"
        android:gravity="start"
        android:maxLines="1"
        android:text="Test User"
        android:textAlignment="viewStart"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_18" />

    <customViews.TextViewRegular
        android:id="@+id/tv_header_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="1"
        android:text="+00 00000000"
        android:textAlignment="viewStart"
        android:textColor="@color/colorGreenLight3" />

</LinearLayout>
