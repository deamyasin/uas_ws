<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xml_rounded_corner_top"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_20"
    android:paddingEnd="@dimen/space_20"
    android:paddingBottom="@dimen/space_20">

    <View
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_20"
        android:background="@drawable/xml_button_red" />

    <customViews.TextViewBold
        android:id="@+id/tv_edit_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/full_name"
        android:textAlignment="viewStart"
        android:textSize="@dimen/text_18" />

    <customViews.EditTextRegular
        android:id="@+id/et_edit_profile_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextHint"
        android:textColorHint="@color/colorTextHint" />

    <customViews.TextViewBold
        android:id="@+id/tv_edit_profile_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="start"
        android:text="@string/email_address"
        android:textAlignment="viewStart"
        android:textSize="@dimen/text_18" />

    <customViews.EditTextRegular
        android:id="@+id/et_edit_profile_value2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextHint"
        android:textColorHint="@color/colorTextHint" />

    <customViews.ButtonBold
        android:id="@+id/btn_edit_profile_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_15"
        android:background="@drawable/xml_button_red"
        android:gravity="center"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_18" />

</LinearLayout>