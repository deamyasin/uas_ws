<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/space_20"
    android:paddingTop="@dimen/space_5"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_item_option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ravano Lot"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_order_item_option_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250 Gram"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_item_option_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/text_12" />

    <TextView
        android:id="@+id/tv_order_item_option_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/text_12" />

</LinearLayout>